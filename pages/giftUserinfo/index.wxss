.gift-center{
 color:#8A8A8F;
 font-size:28rpx;
 padding: 25rpx;
 border-bottom: 1rpx solid #DDDCE0;
}
.bar-item{
  width: 92%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 4%; 
  border-bottom: 1rpx solid #DDDCE0;
  }
.go-share{
  margin: 30rpx 26rpx 0 0;
  height: 64rpx;
  font-size: 24rpx;
  padding:0 30rpx;
  border-radius: 30rpx;
  color: white;
  background-color: #F7553E;
}

button::after{
border:none;
}
