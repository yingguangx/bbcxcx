    width: 100%;
    height: 100%;
    background: #FFFFFF;
    overflow: hidden;
    padding: 0;
    margin: 0;
}
.gift-top{
  width: 100%;
  height: auto;
  color: white;
  text-align: center;
  background-color: #F7553E;
  padding-bottom: 50rpx;
}
.top-frist{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 20rpx;
  font-size: 24rpx;
}
.top-third{
  font-size: 32rpx;
}
.top-fourth{
  font-size: 88rpx;
}
